@model JoMAR.Models.MyRoom

@{
    ViewBag.Title = "My Rooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>My Rooms</h2>
<table>
    <tr>
        <th>
            Chatroom
        </th>
        <th>
            isPublic
        </th>
        <th>
            isPrivate
        </th>
        <th></th>
    </tr>

@foreach (JoMAR.ChatRoom item in Model.MyRooms)
{
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isPublic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isPrivate)
        </td>
        <td>
            @Html.ActionLink("Edit", "edit", new { id = item.RoomID }) |
            @Html.ActionLink("Delete", "delete", new { id = item.RoomID }) |
            @Html.ActionLink("Enter room", "", "Chat/" + item.Name)
            @using (Html.BeginForm()) {
                @Html.ValidationSummary(true)
                @Html.DropDownListFor(x => x.SelectedValue, Model.Users)
                <input type="submit" value="Add member" />
            }
        </td>
    </tr>
    }
}
</table>




