@model IEnumerable<JoMAR.ChatRoom>

@{
    ViewBag.Title = "PublicRooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Public ChatRooms</h2>

<p>
    @Html.ActionLink("Create New chatroom", "create")
</p>
<table>
    <tr>
        <th>
            Chatrooms
        </th>
        <th>
            Public Chatroom
        </th>
        <th>
            Private Chatroom
        </th>
        <th>
           Owner of room 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isPublic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isPrivate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.aspnet_User.UserName)
        </td>
        <td>
            @Html.ActionLink("Enter", "", "Chat/"+ item.Name )        
        </td>
    </tr>   
}

</table>
